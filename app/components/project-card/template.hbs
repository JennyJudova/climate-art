<LinkTo @route="project" @model={{@project}}>
  <div class="project-card">
    <img class="object-fit-contain" src={{@project.image}} alt="Girl in a jacket">
    <div class="info">
      <h2>{{@project.name}}</h2>
      <p>{{@project.info}}</p>
      <p>{{@project.location}}</p>
      <Lists::NoBullets>
        <Lists::NoBullets::HorisontalList @list={{@project.partners}} />
      </Lists::NoBullets>
    </div>
  </div>
</LinkTo>